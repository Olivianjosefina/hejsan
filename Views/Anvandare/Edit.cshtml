@model VinApp.Models.AnvandarDetalj

@{
    ViewData["Title"] = "Edit";
}

<h2>Redigera användare</h2>

@if (Model != null)
{
    <form asp-action="UpdateAnvandare" method="post">
        <input type="hidden" asp-for="AnvandarID" />

        <div class="form-group">
            <label asp-for="AnvandarNamn">Användarnamn:</label>
            <input asp-for="AnvandarNamn" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Epost">Epost:</label>
            <input asp-for="Epost" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Losenord">Lösenord:</label>
            <input asp-for="Losenord" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Alder">Ålder:</label>
            <input asp-for="Alder" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Spara ändringar</button>
        <a asp-action="SelectWithDataSet" class="btn btn-secondary">Avbryt</a>
    </form>
}
else
{
    <p>Användaren kunde inte hittas.</p>
}

<a asp-action="SelectWithDataSet">Tillbaka till användarlistan</a>

