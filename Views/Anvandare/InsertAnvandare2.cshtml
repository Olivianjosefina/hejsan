@model VinApp.Models.AnvandarDetalj

@{
    ViewData["Title"] = "InsertAnvandar2";
}

<h2>Skapa en ny användare</h2>

<form asp-action="InsertAnvandare2" method="post">
    <div class="form-group">
        <label asp-for="AnvandarNamn">Användarnamn:</label>
        <input asp-for="AnvandarNamn" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Epost">Epost:</label>
        <input asp-for="Epost" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Losenord">Lösenord:</label>
        <input asp-for="Losenord" class="form-control" type="password" />
    </div>
    <div class="form-group">
        <label asp-for="Alder">Ålder:</label>
        <input asp-for="Alder" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Skapa användare</button>
</form>

@if (!string.IsNullOrEmpty(ViewBag.error))
{
    <div class="alert alert-danger">@ViewBag.error</div>
}

@if (ViewBag.antal > 0)
{
    <div class="alert alert-success">Användaren har lagts till i databasen.</div>
}


